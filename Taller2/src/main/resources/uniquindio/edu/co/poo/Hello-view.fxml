<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uniquindio.edu.co.poo.HelloController"
            prefWidth="640" prefHeight="420">

    <children>
        <Label layoutX="20" layoutY="18" text="Nombre"/>
        <TextField fx:id="txtNombre" layoutX="90" layoutY="14" prefWidth="220" promptText="Nombre"/>

        <Label layoutX="20" layoutY="58" text="Sexo"/>
        <TextField fx:id="txtSexo" layoutX="90" layoutY="54" prefWidth="220" promptText="Sexo"/>

        <Label layoutX="20" layoutY="98" text="Ciudad"/>
        <TextField fx:id="txtCiudad" layoutX="90" layoutY="94" prefWidth="220" promptText="Ciudad"/>

        <Button layoutX="340" layoutY="30" text="Guardar" onAction="#guardarPersona"/>
        <Button layoutX="430" layoutY="30" text="Ver Datos" onAction="#verDatos"/>

        <TableView fx:id="tablaPersonas" layoutX="20" layoutY="140" prefWidth="600" prefHeight="250">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="colSexo" text="Sexo" prefWidth="150"/>
                <TableColumn fx:id="colCiudad" text="Ciudad" prefWidth="250"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
