<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="contenedorPrincipal" prefHeight="487.0" prefWidth="640.0" spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.fx10.controllers.DashboardController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Encabezado -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="lblTitulo" style="-fx-text-fill: #2c3e50;" text="Dashboard de Productos">
            <font>
                <Font name="System Bold" size="28" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Contenido Principal -->
    <VBox alignment="CENTER" spacing="30" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <Label style="-fx-text-fill: #34495e; -fx-font-size: 18px; -fx-font-weight: bold;" text="Sistema de GestiÃ³n de Productos" />

        <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Administra tu inventario de productos de forma sencilla" />

        <!-- Botones principales -->
        <HBox alignment="CENTER" spacing="20">
            <VBox.margin>
                <Insets top="20" />
            </VBox.margin>

            <Button fx:id="btnCrearProducto" onAction="#onCrearProducto" prefHeight="45" prefWidth="200" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Crear Producto" />

            <Button fx:id="btnVerProductos" onAction="#onVerProductos" prefHeight="45" prefWidth="200" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Ver Lista de Productos" />
        </HBox>
    </VBox>

</VBox>
